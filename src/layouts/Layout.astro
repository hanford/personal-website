---
export interface Props {
  title?: string;
  description?: string;
}

const { title = "Jack Hanford", description = "Engineer - Hacker - Technology Addict" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#db594b" />
    
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon-16x16.png"
    />
    <link rel="manifest" href="/manifest.json" />
    
    <style>
      @font-face {
        font-family: 'Brandon';
        font-style: normal;
        font-weight: 300;
        font-display: auto;
        src: local('Brandon'), url('/fonts/brandon-regular.woff') format('woff');
      }

      @font-face {
        font-family: 'Brandon';
        font-style: normal;
        font-weight: 600;
        font-display: auto;
        src: local('Brandon'), url('/fonts/brandon-medium.woff') format('woff');
      }

      html,
      body {
        background: linear-gradient(-45deg, #d20b54 0%, #ffb849 100%);
      }

      @media (prefers-color-scheme: dark) {
        html,
        body {
          background: #0e0e0e;
        }
      }

      html,
      body {
        font-family: Brandon, -apple-system, BlinkMacSystemFont,Helvetica, Arial, sans-serif;
        width: 100%;
        height: 100%;
        overflow: auto;
        margin: 0;
        padding: 0;
        font-size: 10px;
        color: #32325d;
      }

      @media (prefers-color-scheme: dark) {
        html, body {
          color: rgba(255,255,255,0.9);
        }
      }
        
      * {
        box-sizing: border-box;
      }

      body {
        font-size: 1.6rem;
      }

      button {
        font-family: Brandon;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
